<%- include("../partials/head") %>

<%- include("../partials/navigation") %>

<main>
  <h1>
    <%= edit ? `Edit ${product.name}` : 'Create Product' %>
  </h1>

  <form action=<%= edit ? `/admin/edit-product` : '/admin/create-product' %> method="post">

    <label for="name">Product name</label>
    <input type="text" id="name" name="name" placeholder="Product name" value="<%= edit ? product.name : 'cat' %>"
      autofocus required onfocus="this.select()">

    <label for="description">Product description</label>
    <textarea id="description" name="description" placeholder="Product description" rows="5" required
      onfocus="this.select()"><%= edit ? product.description : 'cat description' %></textarea>

    <label for="price">Product price</label>
    <input type="text" id="price" name="price" placeholder="â‚¬" value="<%= edit ? product.price / 100 : 9.99 %>" required
      onfocus="this.select()"></input>

    <label for="photoURL">Photo URL</label>
    <input type="text" id="photoURL" name="photoURL" placeholder="Will search unsplash if left empty"
      <%= edit && `value=${product.photoURL}` %> onfocus="this.select()">

    <% if (edit) { %><input type="hidden" name="id" value="<%= product.id %>"><% } %>

    <button type="submit"><%= edit ? 'Update product' : 'Create product' %></button>

  </form>

</main>

<%- include("../partials/end") %>
