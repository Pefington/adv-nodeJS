<%- include('../partials/head') %>

<%- include('../partials/navigation') %>

<main>
  <% if (products.length) { %>
  <h1>All products</h1>
  <% products.forEach(product => { %>
  <article>
    <header>
      <h2><%= product.name %></h2>
    </header>
    <img src="<%= product.photoURL %>" alt="<%= product.name %>" />
    <footer>
      <h3> <%= product.description %> </h3>
      <h4> <%= product.displayPrice %> </h4>

      <form action="/admin/delete-product" method="post" class="grid">
        <a href="/admin/edit-product/<%= product.id %>" role="button">Edit product</a>
        <a href="" role="button" type="submit">⚠️Delete product⚠️</a>

      </form>

    </footer>
  </article>
  <% }) %> <% } else { %>
  <h1>No product found.</h1>
  <% } %>
</main>

<%- include('../partials/end') %>
